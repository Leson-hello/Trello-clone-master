<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/item_notification_margin"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="@dimen/card_elevation">

    <LinearLayout
        android:id="@+id/ll_notification_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="horizontal"
        android:padding="@dimen/item_notification_padding">

        <ImageView
            android:id="@+id/iv_notification_icon"
            android:layout_width="@dimen/notification_icon_size"
            android:layout_height="@dimen/notification_icon_size"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/item_notification_icon_margin_end"
            android:contentDescription="@string/notification_icon"
            android:src="@android:drawable/ic_dialog_info"
            app:tint="@color/colorPrimary" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_notification_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/primary_text_color"
                    android:textSize="@dimen/notification_title_text_size"
                    android:textStyle="bold"
                    tools:text="New Task Assigned" />

                <View
                    android:id="@+id/view_unread_indicator"
                    android:layout_width="@dimen/unread_indicator_size"
                    android:layout_height="@dimen/unread_indicator_size"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/unread_indicator_margin"
                    android:background="@drawable/shape_circle_red"
                    android:visibility="gone" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_notification_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/item_notification_body_margin_top"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="@color/secondary_text_color"
                android:textSize="@dimen/notification_body_text_size"
                tools:text="You have been assigned to complete the task 'Update UI Design' in project 'Mobile App Development'" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/item_notification_footer_margin_top"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_notification_project"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/notification_project_text_size"
                    android:textStyle="italic"
                    tools:text="Mobile App Development" />

                <TextView
                    android:id="@+id/tv_notification_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/secondary_text_color"
                    android:textSize="@dimen/notification_time_text_size"
                    tools:text="2 hours ago" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>