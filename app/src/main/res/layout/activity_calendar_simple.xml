<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="40dp"
    tools:context=".activities.CalendarActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_calendar_activity"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Standard Android CalendarView -->
    <CalendarView
        android:id="@+id/calendar_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp" />

    <!-- Selected Date Display -->
    <TextView
        android:id="@+id/tv_selected_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:padding="@dimen/calendar_selected_date_padding"
        android:paddingTop="40dp"
        android:text="Today, January 01, 2024"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/calendar_selected_date_text_size" />

    <!-- Tasks for Selected Date -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/calendar_tasks_padding">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/calendar_tasks_header_margin_bottom"
            android:text="@string/tasks_for_selected_date"
            android:textColor="@color/primary_text_color"
            android:textSize="@dimen/calendar_tasks_header_text_size"
            android:textStyle="bold" />

        <!-- RecyclerView for tasks -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_calendar_tasks"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/calendar_tasks_margin_top"
            android:visibility="visible" />

        <!-- No tasks message -->
        <TextView
            android:id="@+id/tv_no_tasks_on_date"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/no_tasks_on_selected_date"
            android:textColor="@color/secondary_text_color"
            android:textSize="@dimen/calendar_no_tasks_text_size"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>